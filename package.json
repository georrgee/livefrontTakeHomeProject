{
  "name": "quikmovies",
  "main": "expo-router/entry",
  "version": "1.0.0",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "test": "jest --watchAll",
    "test:ci": "jest --coverage --watchAll=false",
    "test:unit": "jest --testPathPattern=__tests__",
    "test:integration": "jest --testPathPattern=integration",
    "test:hooks": "jest --testPathPattern=hooks/__tests__",
    "test:accessibility": "jest --testPathPattern=accessibility",
    "test:services": "jest --testPathPattern=services/__tests__",
    "test:e2e": "detox test"
  },
  "jest": {
    "preset": "jest-expo",
    "testTimeout": 20000,
    "setupFilesAfterEnv": [
      "<rootDir>/components/__tests__/setup.ts"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|@react-native|react-native-reanimated|expo|@expo|expo-modules-core|react-native-gesture-handler|lucide-react-native)/)"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/components/__tests__/setup.ts"
    ]
  },
  "dependencies": {
    "@expo/vector-icons": "^14.1.0",
    "@react-navigation/native": "^7.1.6",
    "axios": "^1.11.0",
    "expo": "~53.0.20",
    "expo-font": "~13.3.2",
    "expo-linear-gradient": "^14.1.5",
    "expo-linking": "~7.1.7",
    "expo-network": "~7.1.5",
    "expo-router": "~5.1.4",
    "expo-splash-screen": "~0.30.10",
    "expo-status-bar": "~2.2.3",
    "expo-system-ui": "~5.0.10",
    "expo-web-browser": "~14.2.0",
    "lucide-react-native": "^0.536.0",
    "react": "19.0.0",
    "react-native": "0.79.5",
    "react-native-gesture-handler": "^2.27.2",
    "react-native-reanimated": "~3.17.4",
    "react-native-safe-area-context": "^5.4.0",
    "react-native-screens": "~4.11.1",
    "react-native-web": "~0.20.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^13.2.2",
    "@types/jest": "^30.0.0",
    "@types/react": "~19.0.10",
    "axios-mock-adapter": "^1.22.0",
    "jest": "^29.2.1",
    "jest-expo": "~53.0.9",
    "msw": "^2.0.0",
    "react-test-renderer": "19.0.0",
    "typescript": "~5.8.3"
  },
  "private": true
}
